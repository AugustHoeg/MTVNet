{
  "task": "superformer" 
  ,
  "model": "plain" 
  ,
  "gpu_ids": [0]
  ,
  "dist": false,
  "scale": 1 
  ,
  "n_channels": 1 
  ,
  "path": {
    "root": "superresolution" 
    ,
    "pretrained_netG": null 
    ,
    "pretrained_netE": null 
  },
  "datasets": {
    "train": {
      "name": "train_dataset" 
      ,
      "dataset_type": "HCP" 
      ,
      "dataroot_H": "../Vedrana_master_project/3D_datasets/datasets/HCP_1200/train" // path of H training dataset
      ,
      "dataroot_L": "../Vedrana_master_project/3D_datasets/datasets/HCP_1200/train" // path of L training dataset
      ,
      "scale": 1,
      "crop_size": 64 
      ,
      "split": "train",
      "dataloader_shuffle": true,
      "dataloader_num_workers": 16,
      "dataloader_batch_size": 4 
    },
    "test": {
      "name": "val_dataset" 
      ,
      "dataset_type": "HCP" 
      ,
      "dataroot_H": "../Vedrana_master_project/3D_datasets/datasets/HCP_1200/test"
      ,
      "dataroot_L": "../Vedrana_master_project/3D_datasets/datasets/HCP_1200/test"
      ,
      "split": "val",
      "dataloader_batch_size": 1,
      "train_size": 64
    }
  },
  "netG": {
    "net_type": "superformer",
    "description": "3D Transformer-based SR model from SuperFormer paper",
    //"upscale": 1,

    //"in_chans": 1,
    //"img_size": 64,

    "window_size": 8,
    "img_range": 1.0,
    "depths": [6, 6, 6],      // Default is [6, 6, 6]
    "embed_dim": 252,         // Default is 252
    "num_heads": [6, 6, 6],   // Default is [6, 6, 6]
    "mlp_ratio": 2,
    "upsampler": null,  // null

    "resi_connection": "1conv",
    "ape": false,
    "rpb": true,
    "output_type": "direct",
    "num_feat": 126,           // Default is 126
    "init_type": "default",
    "patch_size": 2,

    "use_checkpoint": true    // Testing pre-implemented gradient checkpointing of SuperFormer, August
  },
  "train": {

    "mixed_precision": "FP16",

    "G_lossfn_type": "l1",
    "G_lossfn_weight": 1.0,
    "E_decay": 0,

    "G_optimizer_type": "adam",
    "G_optimizer_lr": 2e-4,
    "G_optimizer_wd": 0,

    "G_optimizer_clipgrad": null,
    "G_optimizer_reuse": true,
    "G_scheduler_type": "MultiStepLR",
    "G_scheduler_milestones": [
      250000,
      400000,
      450000,
      475000,
      500000
    ],
    "G_scheduler_gamma": 0.5,
    "G_regularizer_orthstep": null,
    "G_regularizer_clipstep": null,

    "G_param_strict": true,
    "E_param_strict": true,

    "manual_seed": 8323,
    "checkpoint_test": 20,  // 150 for test_dataset
    "checkpoint_save": 1000000,
    "checkpoint_print": 20,  // 150 for test_dataset
    "checkpoint_save_visuals": 20  // 150 for test_dataset
  },
  "test": {
    "performance_metrics": ["psnr", "ssim", "nrmse"]
  }
}